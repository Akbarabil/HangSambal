<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:gravity="center"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="16dp"
        android:orientation="vertical"
        android:layout_weight="1">

        <TextView
            android:id="@+id/textViewNamaProduk"
            style="@style/PoppinsRegularArsenicText1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hang Sambal 20gr" />

        <CheckBox
            android:id="@+id/checkBoxStockKosong"
            style="@style/PoppinsRegularArsenicText1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Stock Kosong"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageViewMinus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:src="@drawable/ic_minus"/>

        <EditText
            android:id="@+id/editTextJumlahProduk"
            style="@style/PoppinsRegularArsenicText1"
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:gravity="center"
            android:inputType="number"
            android:text="0" />

        <ImageView
            android:id="@+id/imageViewPlus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:src="@drawable/ic_plus"/>

    </LinearLayout>

</LinearLayout>